<% action = (action_type == :edit) ? goal_url(goal) : goals_url %>
<% button_value = (action_type == :edit) ? 'Update goal' : 'New goal' %>

<%= render 'shared/alerts' %>

<form action='<%= action %>' method='POST'>
  <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
  <% if action_type == :edit %>
    <input name='_method' type='hidden' value='PUT'>
  <% end %>

  <label>Title:
    <input type='text' value='<%= goal.title %>' name='goal[title]'>
  </label>
  <br>

  <label>Description:
    <textarea name='goal[description]'><%= goal.description %></textarea>
  </label>
  <br>

  <label>Private?
    <input type='checkbox' name='goal[private]'
      <%= "checked='true'" if goal.private %>>
  </label>
  <br>

  <label>Completed?
    <input type='checkbox' name='goal[completed]'
      <%= "checked='true'" if goal.private %>>
  </label>
  <br>

  <input type='submit' value='<%= button_value %>'>
</form>
